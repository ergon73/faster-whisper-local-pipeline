# Каталог с исходными видеофайлами
VIDEO_IN=video_in

# Каталог с входными отдельными аудио
AUDIO_IN=audio_in

# Папка для подготовленных WAV
AUDIO_OUT=audio_out

# Папка для текстовых транскриптов
TRANSCRIBE_OUT=transcribe

# Размер модели Whisper (tiny/base/small/medium/large-v2/large-v3)
WHISPER_MODEL=large-v3

# Предпочитаемое устройство: cuda, cpu или auto
WHISPER_DEVICE=auto

# Ширина beam search (больше = точнее, но медленнее)
WHISPER_BEAM_SIZE=5

# Включение Voice Activity Detection
WHISPER_VAD_FILTER=true

# Минимальная пауза для VAD в миллисекундах
WHISPER_VAD_MIN_SILENCE=500

# Количество потоков CPU для декодера (0 = авто)
WHISPER_CPU_THREADS=0

# Число воркеров обработки сегментов
WHISPER_NUM_WORKERS=1

# Пропускать повторную перекодировку, если WAV свежий
SKIP_FRESH_AUDIO=true
