# === Chapters (Stage 2) ===

# Алгоритм разбивки на главы
CHAPTER_MIN_GAP_SEC=8.0              # минимальная пауза для разделения глав (секунды)
CHAPTER_MIN_DURATION_SEC=120.0       # минимальная длина главы (2 минуты)
CHAPTER_MAX_DURATION_SEC=600.0       # максимальная длина главы (10 минут)
CHAPTER_MIN_PARAGRAPHS=3             # минимум абзацев в главе

# LLM для названий глав
CHAPTER_LLM_MODEL=qwen3:32b          # модель для генерации названий
CHAPTER_USE_LLM=true                 # использовать LLM для названий (false = "Глава N")

# Отчёты
CHAPTER_REPORT=true                  # создавать *_chapters_report.json

# TRANSCRIBE_OUT defaults to ./transcribe if not set
